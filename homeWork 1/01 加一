class Solution {
public:
    vector<int> plusOne(vector<int>& digits) {
        int n = digits.size();
        for ( int i=n-1 ; i >= 0; i--){
            digits[i]++;
            digits[i] = digits[i] % 10;
            if ( digits[i] != 0)
                return digits;
        }
        vector<int> newDigits(n + 1);
        newDigits[0] = 1;
        return newDigits;
    }
};